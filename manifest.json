{
  "manifest_version": 3,
  "name": "LinkedIn Job Language Detector",
  "version": "1.0.0",
  "description": "Detect and display language of LinkedIn job postings",
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/jobs/search*",
        "https://*.linkedin.com/jobs/view*",
        "https://*.linkedin.com/jobs/collections*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["activeTab"],
  "host_permissions": ["https://*.linkedin.com/*"]
}
